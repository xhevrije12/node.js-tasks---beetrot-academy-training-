const fs = require('fs');
require('dotenv').config();

// 1. Create .env & 2. Read it
fs.writeFileSync('.env', 'MY_MSG=Hello from Env!');
require('dotenv').config({ override: true }); // Refresh to see the new file
const msg = process.env.MY_MSG;

// 3. Create folder & 4/5. Create/Write file
fs.mkdirSync('data', { recursive: true });
fs.writeFileSync('data/message.txt', msg);

// 6. Read and Print
console.log('File Content:', fs.readFileSync('data/message.txt', 'utf8'));

// 7. Delete file & 8. Remove folder
fs.unlinkSync('data/message.txt');
fs.rmdirSync('data');

console.log('Cleanup complete.');